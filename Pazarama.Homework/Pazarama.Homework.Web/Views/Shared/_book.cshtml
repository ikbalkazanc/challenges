@model Pazarama.Homework.Core.Entity.Book
<div class="card mb-3">
	<div class="row">
		<div class="col-md-3">
			<img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid" />
		</div>
		<div class="col-md-9">
			<div class="card-body">
				<h5 class="card-title">@Model.Title</h5>
				<div>
					<a class="btn btn-primary" asp-controller="Books" asp-action="Details" asp-route-id="@Model.Id">Detaya Git</a>
					
					<a class="btn btn-warning" asp-controller="Books" asp-action="Edit" asp-route-id="@Model.Id">Düzenle </a>
					<a class="btn btn-danger" asp-controller="Books" asp-action="Delete" asp-route-id="@Model.Id">Sil </a>
					<div>
						<br/>
						@if (Model.Categories != null)
						{

							foreach (var item in Model.Categories)
							{
								<span class="btn btn-info rounded-circle">@item.Name</span>
							}

						}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>